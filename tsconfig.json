{
    "compilerOptions": {
      "outDir": "./dist/",
      "allowJs": true,
      "target": "ESNext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "rootDir": "./src/",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
    },
    "include": ["./src/**/*"]
  }
